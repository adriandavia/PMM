<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_acerca_de"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adrian.proyectotrimestral_adriandavia.AcercaDe">

    <TextView
        android:text="Acerca De: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/adtitulo"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center" />

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView3"
        android:layout_toEndOf="@+id/adtitulo"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/adtitulo" />

    <TextView
        android:text="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/adversion"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:typeface="serif" />

    <TextView
        android:text="Versión:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adversion"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:layout_below="@+id/adtitulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:typeface="serif"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Autor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:typeface="serif"
        android:fontFamily="sans-serif" />

    <TextView
        android:text="Adrián Davia García 2DAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        android:typeface="serif"
        android:fontFamily="sans-serif" />

    <Button
        android:text="Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/advolver"
        android:background="@color/colorPrimary"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:typeface="serif" />
</RelativeLayout>
