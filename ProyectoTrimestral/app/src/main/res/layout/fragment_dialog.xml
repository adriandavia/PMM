<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.philippe.basedades.MyDialogFragment">

    <TextView
        android:text="Curs 2DAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcion"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/textView7"
        android:visibility="invisible" />

    <TextView
        android:text="Versió de l'aplicació 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp"
        android:id="@+id/textView9"
        android:visibility="invisible" />

    <TextView
        android:text="Usuari: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:visibility="invisible" />

    <TextView
        android:text="Contrasenya: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView12"
        android:visibility="invisible" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoUser"
        android:layout_above="@+id/textView12"
        android:layout_alignStart="@+id/infoPass"
        android:visibility="invisible" />

    <TextView
        android:text="Dades d'usuari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <TextView
        android:text="Assignatura PMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/infoUser"
        android:visibility="invisible" />

    <TextView
        android:text="Informació"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/nombretarea"
        android:layout_alignParentEnd="true"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textStyle="normal|bold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/descripcion"
        android:layout_below="@+id/nombretarea"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorAccent" />



    <Button
        android:text="Atras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/atras"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView12"
        android:layout_toStartOf="@+id/infoPass"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:background="@android:color/transparent" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoPass"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:visibility="invisible" />

    <Button
        android:text="Borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:id="@+id/borrar"
        android:textColor="@color/colorPrimary"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/completar"
        android:layout_alignBottom="@+id/completar"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Completar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/completar"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/atras"
        android:layout_alignBottom="@+id/atras"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
