<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.proyectotrimestral.RegistroActivity">

    <TextView
        android:text="¡No esperes más y unete!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/descripcion"
        android:layout_alignParentEnd="true"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descripcion"
        android:layout_alignParentStart="true"
        android:id="@+id/mensajeerror"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textColor="@android:color/holo_red_dark" />

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_below="@+id/mensajeerror"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:id="@+id/nombre"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:typeface="serif"
        android:fontFamily="sans-serif"
        android:layout_height="42dp"
        android:layout_toStartOf="@+id/rapellidos" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/nombre"
        android:layout_alignParentEnd="true"
        android:id="@+id/rnombre"
        android:layout_toEndOf="@+id/nombre"
        android:textSize="18sp"
        android:typeface="serif"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/rapellidos" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/apellidos"
        android:layout_alignParentEnd="true"
        android:id="@+id/rapellidos"
        android:layout_toEndOf="@+id/apellidos"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/rusuario"
        android:textAlignment="center" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/rapellidos"
        android:id="@+id/usuario"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/rapellidos" />

    <TextView
        android:text="Apellidos"
        android:layout_width="wrap_content"
        android:id="@+id/apellidos"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:typeface="serif"
        android:fontFamily="sans-serif"
        android:textColor="@color/colorAccent"
        android:layout_height="42dp"
        android:layout_below="@+id/nombre"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/rusuario" />

    <TextView
        android:text="Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/usuario"
        android:layout_alignParentStart="true"
        android:id="@+id/contraseña"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:typeface="serif"
        android:fontFamily="sans-serif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/rusuario"
        android:layout_alignParentEnd="true"
        android:id="@+id/rcontraseña"
        android:layout_toEndOf="@+id/contraseña"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textSize="18sp"
        android:textColor="?attr/colorAccent"
        android:textAlignment="center" />

    <TextView
        android:text="e-mail"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/rcontraseña"
        android:layout_alignParentStart="true"
        android:id="@+id/email"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:layout_toStartOf="@+id/rcontraseña" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/rcontraseña"
        android:layout_alignParentEnd="true"
        android:id="@+id/remail"
        android:layout_toEndOf="@+id/email"
        android:textColor="?attr/colorAccent"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:layout_alignStart="@+id/rcontraseña"
        android:textAlignment="center" />

    <Button
        android:text="Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/rvolver"
        android:background="@color/colorPrimary"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/rusuario"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:typeface="serif"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/rapellidos"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/contraseña" />

    <Button
        android:text="¡UNIERSE!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/runirse"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:fontFamily="sans-serif"
        android:typeface="serif"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/remail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>