<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mati.ejercicio23_tablelayout.MainActivity"
    android:background="#000000">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">
        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Color 1"
            android:textColor="#ff0000"
            android:id="@+id/rojo" />

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Color 2"
            android:textColor="#ffe100"
            android:id="@+id/amarillo" />

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Color3"
            android:textColor="#00bfff"
            android:layout_weight="152"
            android:id="@+id/azul" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_column="0"
            android:layout_span="3"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_weight="152"
            android:id="@+id/textView"
            android:background="#ffffff" />
    </TableRow>
    <TableRow android:background="#000000">

        <Button android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Borrar"
            android:textColor="#000000"
            android:layout_column="2"
            android:layout_weight="152"
            android:id="@+id/borrar" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </TableRow>
</TableLayout>
