<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_factura"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mati.examenalquilercoches_adriandavia.Factura">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imagecoche"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Modelo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagecoche"
        android:layout_alignParentStart="true"
        android:id="@+id/modelo"
        android:layout_alignEnd="@+id/preciohora"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/modelo"
        android:layout_alignParentEnd="true"
        android:id="@+id/amodelo"
        android:layout_toEndOf="@+id/modelo"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Precio por hora: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modelo"
        android:id="@+id/preciohora"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Extras:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preciohora"
        android:layout_alignParentStart="true"
        android:id="@+id/extras"
        android:layout_alignEnd="@+id/preciohora"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Seguro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tiempo"
        android:layout_alignParentStart="true"
        android:id="@+id/seguro"
        android:layout_alignEnd="@+id/tiempo"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Coste total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seguro"
        android:id="@+id/costetotal"
        android:layout_alignEnd="@+id/preciohora"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Hora pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/costetotal"
        android:layout_alignParentStart="true"
        android:id="@+id/horapedido"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preciohora"
        android:id="@+id/aextras"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/preciohora"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aextras"
        android:layout_alignParentEnd="true"
        android:id="@+id/atiempo"
        android:layout_toEndOf="@+id/extras"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/costetotal"
        android:layout_toEndOf="@+id/horapedido"
        android:id="@+id/hroa" />

    <TextView
        android:text="Tiempo:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tiempo"
        android:layout_below="@+id/extras"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/aextras"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hroa"
        android:layout_alignParentStart="true"
        android:id="@+id/reloj"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/apreciohora"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/preciohora"
        android:layout_alignBottom="@+id/preciohora"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/preciohora" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aseguro"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/seguro"
        android:layout_alignBottom="@+id/seguro"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/seguro" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acostetotal"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/costetotal"
        android:layout_alignBottom="@+id/costetotal"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/costetotal" />

    <Button
        android:text="Vuelta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/vuelta"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />
</RelativeLayout>
